<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/generalBackground"
    android:orientation="vertical"
    android:paddingBottom="24dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="62dp"
            android:gravity="top"
            android:padding="12dp"
            android:paddingTop="10dp"
            android:text="@string/playlist_maker"
            android:textColor="@color/white"
            android:textSize="26sp" />
    </FrameLayout>

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="@integer/material_motion_duration_medium_1"
        android:backgroundTint="@color/white"
        android:text="@string/Search"
        android:textColor="@color/buttonTextColour"
        android:textSize="26sp"
        app:cornerRadius="16dp"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/iconGeneral" />

    <Button
        android:id="@+id/library"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="@integer/material_motion_duration_medium_1"
        android:backgroundTint="@color/white"
        android:text="@string/library"
        android:textColor="@color/buttonTextColour"
        android:textSize="26sp"
        app:cornerRadius="16dp"
        app:icon="@drawable/media"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/iconGeneral" />

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="@integer/material_motion_duration_medium_1"
        android:backgroundTint="@color/white"
        android:text="@string/Settings"
        android:textColor="@color/buttonTextColour"
        android:textSize="26sp"
        app:cornerRadius="16dp"
        app:icon="@drawable/group"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/iconGeneral" />

</LinearLayout>