<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/GeneralActivityLianer"
    android:id="@+id/searchContainer"
    android:background="@color/settingsGeneral"
    tools:context=".SearchActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:padding="12dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:fontFamily="@font/ys_display_medium"
            android:padding="12dp"
            android:text="@string/SearchGeneral"
            android:textColor="@color/GeneralNameColor"
            android:textSize="26dp" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ed_shape"
            android:drawableStart="@drawable/small_search_icon"
            android:drawablePadding="11dp"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/Search"
            android:inputType="text"
            android:lines="1"
            android:paddingStart="16dp"
            android:paddingTop="8.5dp"
            android:paddingBottom="8.5dp"
            android:textColor="@color/smallSettingsFieldValue"
            android:textColorHint="@color/smallSettingsFieldValue" />

        <ImageView
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_clear_24"
            android:padding="14dp"
            android:visibility="gone" />
    </FrameLayout>


</LinearLayout>